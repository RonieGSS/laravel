#! /bin/bash
echo '
= = = = = = = = = = = = = = = = = = = = = = = = = =
                Development Commands
- - - - - - - - - - - - - - - - - - - - - - - - - -

 Select from the following set of commands:

- - - - - - - - - - - - - - - - - - - - - - - - - -
                   DESCRIPTIONS
- - - - - - - - - - - - - - - - - - - - - - - - - -
1) Make Controller    => Artisan Make Controller
2) Make Model         => Artisan Make Model
3) Make Migration     => Artisan Make Migration
4) Make Seeder        => Artisan Make Seeder
5) Migrate            => Artisan Migrate
6) DB Seed            => Artisan Database Seed
7) Publish            => Artisan Vendor Publish
8) Make Command       => Artisan Make Command
9) Random Command     => Any Artisan Command
10) Make Auth         => Artisan Make Auth
11) Back              => Return to bin/gss panel
12) Quit              => Close the panel
= = = = = = = = = = = = = = = = = = = = = = = = = =  
'
PS3='Please enter the number of your choice: '
development[0]="Make Controller"
development[1]="Make Model"
development[2]="Make Migration"
development[3]="Make Seeder"
development[4]="Migrate"
development[5]="DB Seed"
development[6]="Publish"
development[7]="Make Command"
development[8]="Random Command"
development[9]="Make Auth"
development[10]="Back"
development[11]="Quit"
cd `dirname $0`/../../
bin='ops/docker/laravel/development/bin'
artisan='app/Console/Commands/Artisan'
select opt in "${development[@]}"
do
    case $opt in
        "Make Controller")
            bash $bin/exec $artisan/make_controller
            break
            ;;
        "Make Model")
            bash $bin/exec $artisan/make_model
            break
            ;;
        "Make Migration")
            bash $bin/exec $artisan/make_migration
            break
            ;;
        "Make Seeder")
            bash $bin/exec $artisan/make_seeder
            break
            ;;
        "Migrate")
            bash $bin/exec $artisan/migrate
            break
            ;;
        "DB Seed")
            bash $bin/exec $artisan/db_seed
            break
            ;;
        "Publish")
            bash $bin/exec $artisan/publish
            break
            ;;
        "Make Command")
            bash $bin/exec $artisan/make_command
            break
            ;;
        "Random Command")
            bash $bin/exec $artisan/random
            break
            ;;
        "Make Auth")
            bash $bin/exec $artisan/make_auth
            break
            ;;
        "Back")
            bash bin/gss
            break
            ;;
        "Quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
done