#! /bin/bash
echo '
= = = = = = = = = = = = = = = = = = = = = = = = = =
                Development Commands
- - - - - - - - - - - - - - - - - - - - - - - - - -

 Select from the following set of commands:

- - - - - - - - - - - - - - - - - - - - - - - - - -
                   DESCRIPTIONS
- - - - - - - - - - - - - - - - - - - - - - - - - -
1) Make Controller    => Artisan Make Controller
2) Make Model         => Artisan Make Model
3) Make Migrate       => Artisan Make Migration
4) Migrate            => Artisan Migrate
5) Publish            => Artisan Vendor Publish
6) Make Command       => Artisan Make Command
7) Back               => Return to bin/gss panel
8) Quit               => Close the panel
= = = = = = = = = = = = = = = = = = = = = = = = = =  
'
PS3='Please enter the number of your choice: '
development[0]="Make Controller"
development[1]="Make Model"
development[2]="Make Migrate"
development[3]="Migrate"
development[4]="Publish"
development[5]="Make Command"
development[6]="Back"
development[7]="Quit"
cd `dirname $0`/../../
bin='ops/docker/laravel/development/bin'
artisan='app/Console/Commands/Artisan'
select opt in "${development[@]}"
do
    case $opt in
        "Make Controller")
            bash $bin/exec $artisan/make_controller
            break
            ;;
        "Make Model")
            bash $bin/exec $artisan/make_model
            break
            ;;
        "Make Migrate")
            bash $bin/exec $artisan/make_migrate
            break
            ;;
        "Migrate")
            bash $bin/exec $artisan/migrate
            break
            ;;
        "Publish")
            bash $bin/exec $artisan/publish
            break
            ;;
        "Make Command")
            bash $bin/exec $artisan/make_command
            break
            ;;
        "Back")
            bash bin/gss
            break
            ;;
        "Quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
done